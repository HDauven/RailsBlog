<!DOCTYPE html>
<html>
  <head>
    <title>Rails Blog - Admin Panel</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'admin/application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#"><h1>Rails Blog<span>/Manager</span></h1></a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to_active "Posts",      admin_posts_path %></li>
            <li><%= link_to_active "Categories", admin_categories_path %></li>
            <li><%= link_to_active "Users",      admin_users_path %></li>
          </ul>

          <%= render 'partials/admin/search' %>

        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <section>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <!-- Alerts and messages -->
            <% if flash[:notice] %>
              <div class="alert alert-success"><%= flash[:notice] %></div>
            <% end %>
            <% if flash[:alert] %>
              <div class="alert alert-danger"><%= flash[:alert] %></div>
            <% end %>

            <div class="well">
              <%= yield %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <%= render 'partials/admin/footer' %>
  </body>
</html>
